@model UserRegisterRequestModel

<form asp-controller="Home" asp-action="Register" method="post" class="p-3 w-75 m-auto">

    <div class="mb-3">
        <label> Kullanıcı İsmi Giriniz </label>
        <span class="text-danger" asp-validation-for="UserName"></span>
        <input asp-for="UserName" class="form-control" /> 
    </div>

    <div class="mb-3">
        <label> Şifre Giriniz </label>
        <span class="text-danger" asp-validation-for="Password"></span>
        <input asp-for="Password" class="form-control" />
    </div>

    <div class="mb-3">
        <label> Şifre'yi Tekrarlayınız </label>
        <span class="text-danger" asp-validation-for="ConforimPassword"></span>
        <input asp-for="ConforimPassword" class="form-control" />
    </div>

    <div class="mb-3">
        <label> Email Adresi Giriniz </label>
        <span class="text-danger" asp-validation-for="Email"></span>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="mb-3"> <button class="btn btn-primary"> Kayıt Ol </button></div>

    <div class="text-danger" asp-validation-summary="ModelOnly"> </div>

</form>