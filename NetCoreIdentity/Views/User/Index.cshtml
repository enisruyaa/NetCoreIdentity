@model List<AppUser>

    <a asp-controller="User" asp-action="Create"> Yeni Kullanıcı Ekle </a>

<table class="table table-hover">
    <thead>
        <tr>
            <th> Kullanıcı Adı </th>
            <th> Email Adresi </th>
            <th> Rolleri </th>
            <th> Rol Ata </th>
        </tr>
    </thead>
    <tbody>
        @foreach (AppUser item in Model)
        {
            <tr>
                <td> @item.UserName </td>
                <td> @item.Email </td>
                <td> <getUserInfo user-id="item.Id"></getUserInfo>  </td>
                <td> <a  asp-action="AssignRole" asp-route-id ="@item.Id" class="btn btn-dark"> Rol Ata </a> </td>
            </tr>
        }
    </tbody>
</table>